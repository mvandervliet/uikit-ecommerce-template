mixin filterbox(list, hooks)
  ul.uk-list.tm-scrollbox
    li(mu-each=list mu-each-as="row")
      input.tm-checkbox(
        mu-attr
        mu-attr-id="row.value"
        mu-attr-value="row.value"
        name="categories[]"
        type="checkbox")
      label(mu-attr mu-attr-for="row.value")
        span
          span(mu-html="row.value")
          |
          |
          span.uk-text-meta.uk-text-xsmall(mu-html="row.count")